---
import {Badge} from "@/components/ui/badge";
const { title, skills } = Astro.props
---

<div class='flex flex-col gap-y-2 md:flex-row md:gap-x-10 md:gap-y-0'>
	<h3 class='w-1/6 font-normal'>{title}</h3>
	<div class='flex flex-row flex-wrap gap-x-4 gap-y-2 md:w-5/6'>
		{skills.map((skill: string) => <Badge className="font-light" variant="outline">{skill}</Badge>)}
	</div>
</div>