---
import { cn } from '@/lib/utils'
const { class: className, title } = Astro.props
---

<section class={cn(className, 'flex flex-col gap-y-5 md:flex-col md:gap-y-0')}>
	<div class='text-xl font-semibold md:pb-6 pb-1'>
		<h2>{title}</h2>
	</div>
	<div class='flex flex-col gap-y-5'>
		<slot />
	</div>
</section>
